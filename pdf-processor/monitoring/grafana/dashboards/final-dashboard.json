{
  "dashboard": {
    "id": null,
    "title": "Document Processing Pipeline - LIVE",
    "tags": ["document-processing", "pipeline", "live-data"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üìÅ S3 Uploads (rules-repository)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_s3_uploads_total{bucket=\"rules-repository\"})",
            "legendFormat": "Total Uploads"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "üîÑ Format Conversions", 
        "type": "table",
        "targets": [
          {
            "expr": "document_conversions_total",
            "legendFormat": "{{from_format}} ‚Üí {{to_format}}"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 0}
      },
      {
        "id": 3,
        "title": "üìÑ OCR Processing",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_ocr_processing_total{status=\"success\"})",
            "legendFormat": "OCR Success"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 0}
      },
      {
        "id": 4,
        "title": "‚úÇÔ∏è Chunks Created",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_chunks_created_total)",
            "legendFormat": "Total Chunks"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 4}
      },
      {
        "id": 5,
        "title": "üì§ KB Sync (chunked-rules-repository)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_kb_sync_operations_total{status=\"success\"})",
            "legendFormat": "KB Sync Success"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 4}
      },
      {
        "id": 6,
        "title": "‚úÖ Files Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_files_processed_total{status=\"success\"})",
            "legendFormat": "Success"
          },
          {
            "expr": "sum(document_files_processed_total{status=\"failed\"})",
            "legendFormat": "Failed"
          }
        ],
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 4}
      },
      {
        "id": 7,
        "title": "‚è±Ô∏è Processing Time by Stage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(document_processing_duration_seconds_sum{stage=\"conversion\"}[5m])",
            "legendFormat": "Conversion"
          },
          {
            "expr": "rate(document_processing_duration_seconds_sum{stage=\"ocr\"}[5m])",
            "legendFormat": "OCR"
          },
          {
            "expr": "rate(document_processing_duration_seconds_sum{stage=\"chunking\"}[5m])",
            "legendFormat": "Chunking"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 8,
        "title": "‚ö° Active Jobs",
        "type": "stat",
        "targets": [
          {
            "expr": "document_active_processing_jobs",
            "legendFormat": "Currently Processing"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 9,
        "title": "‚ùå Errors by Stage",
        "type": "table",
        "targets": [
          {
            "expr": "document_processing_errors_total",
            "legendFormat": "{{stage}} - {{error_type}}"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 16}
      }
    ]
  }
}
