{
  "dashboard": {
    "id": null,
    "title": "PDF Executive Dashboard",
    "tags": ["pdf", "executive"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Files Processed Today",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(pdf_files_processed_total[1d])",
            "legendFormat": "Files"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(increase(pdf_files_processed_total{status=\"success\"}[1d]) / increase(pdf_files_processed_total[1d])) * 100",
            "legendFormat": "Success %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Processing Speed",
        "type": "stat",
        "targets": [
          {
            "expr": "avg_over_time(processing_duration_seconds[1d])",
            "legendFormat": "Avg Time"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Errors Today",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(processing_errors_total[1d])",
            "legendFormat": "Errors"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      }
    ],
    "schemaVersion": 27,
    "version": 1
  }
}
