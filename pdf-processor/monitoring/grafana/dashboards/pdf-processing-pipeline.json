{
  "dashboard": {
    "id": null,
    "title": "PDF Processing Pipeline",
    "tags": ["pdf-processor", "pipeline", "monitoring"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Files Processed Today",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pdf_files_processed_total{status=\"success\"})",
            "legendFormat": "Successful Files"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"displayMode": "color-text"}
          }
        }
      },
      {
        "id": 2,
        "title": "Processing Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(pdf_files_processed_total{status=\"success\"}[1h])) / sum(rate(pdf_files_processed_total[1h]))) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 3,
        "title": "Processing Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(processing_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(processing_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "yAxes": [{"unit": "s"}]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(processing_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Queue Depth",
        "type": "gauge",
        "targets": [
          {
            "expr": "queue_depth",
            "legendFormat": "Messages in Queue"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Active Processing Jobs",
        "type": "stat",
        "targets": [
          {
            "expr": "active_processing_jobs",
            "legendFormat": "Active Jobs"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8}
      },
      {
        "id": 7,
        "title": "Files by Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status) (pdf_files_processed_total)",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Processing Volume (Last 24h)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(pdf_files_processed_total[1h])) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    }
  }
}
