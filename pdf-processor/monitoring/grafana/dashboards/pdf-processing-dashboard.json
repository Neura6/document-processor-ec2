{
  "dashboard": {
    "id": null,
    "title": "PDF Processing Pipeline Dashboard",
    "tags": ["pdf-processor", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Files Uploaded to S3 (Pending)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(files_uploaded_to_s3_total) - sum(pdf_files_processed_total)",
            "legendFormat": "Pending Files"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Files Queued for Processing",
        "type": "stat",
        "targets": [
          {
            "expr": "queue_depth",
            "legendFormat": "SQS Queue"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Files Converted to PDF Today",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(files_converted_to_pdf_total)",
            "legendFormat": "Today"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Files Chunked Today",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(files_chunked_total)",
            "legendFormat": "Today"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Files Processed Today",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pdf_files_processed_total)",
            "legendFormat": "Today"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Files Not Converted Today",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(files_not_converted_total)",
            "legendFormat": "Today"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Files Processed This Month",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pdf_files_processed_total)",
            "legendFormat": "This Month"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Total Files Processed (All Time)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pdf_files_processed_total)",
            "legendFormat": "Total"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
