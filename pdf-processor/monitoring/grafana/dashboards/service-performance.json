{
  "dashboard": {
    "id": null,
    "title": "Service Performance Dashboard",
    "tags": ["services", "performance", "microservices"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Service Processing Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(service_processing_duration_seconds_bucket{service=\"conversion\"}[5m]))",
            "legendFormat": "Conversion (95th)"
          },
          {
            "expr": "histogram_quantile(0.95, rate(service_processing_duration_seconds_bucket{service=\"ocr\"}[5m]))",
            "legendFormat": "OCR (95th)"
          },
          {
            "expr": "histogram_quantile(0.95, rate(service_processing_duration_seconds_bucket{service=\"chunking\"}[5m]))",
            "legendFormat": "Chunking (95th)"
          },
          {
            "expr": "histogram_quantile(0.95, rate(service_processing_duration_seconds_bucket{service=\"watermark\"}[5m]))",
            "legendFormat": "Watermark (95th)"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "yAxes": [{"unit": "s"}]
      },
      {
        "id": 2,
        "title": "Service Error Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(service_errors_total{service=\"conversion\"}[5m])",
            "legendFormat": "Conversion Errors"
          },
          {
            "expr": "rate(service_errors_total{service=\"ocr\"}[5m])",
            "legendFormat": "OCR Errors"
          },
          {
            "expr": "rate(service_errors_total{service=\"chunking\"}[5m])",
            "legendFormat": "Chunking Errors"
          },
          {
            "expr": "rate(service_errors_total{service=\"watermark\"}[5m])",
            "legendFormat": "Watermark Errors"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 3,
        "title": "S3 Operations Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(s3_upload_duration_seconds_bucket[5m]))",
            "legendFormat": "Upload (95th)"
          },
          {
            "expr": "histogram_quantile(0.95, rate(s3_download_duration_seconds_bucket[5m]))",
            "legendFormat": "Download (95th)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 4,
        "title": "Service Success Rates",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(service_requests_total{service=\"conversion\",status=\"success\"}[5m])) / sum(rate(service_requests_total{service=\"conversion\"}[5m]))) * 100",
            "legendFormat": "Conversion Success %"
          },
          {
            "expr": "(sum(rate(service_requests_total{service=\"ocr\",status=\"success\"}[5m])) / sum(rate(service_requests_total{service=\"ocr\"}[5m]))) * 100",
            "legendFormat": "OCR Success %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Memory Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"pdf-processor\"}",
            "legendFormat": "Memory Usage"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Service Request Volume",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(service_requests_total[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ]
  }
}
