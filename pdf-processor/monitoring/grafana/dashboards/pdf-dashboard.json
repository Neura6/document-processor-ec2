{
  "dashboard": {
    "id": null,
    "title": "PDF Processing Dashboard",
    "tags": ["pdf", "processing", "monitoring"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Files Processed Today",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(pdf_files_processed_total[1d])",
            "legendFormat": "Files"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Processing Rate (per minute)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pdf_files_processed_total[5m]) * 60",
            "legendFormat": "Files/min"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Processing Errors",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(processing_errors_total[1d])",
            "legendFormat": "Errors"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Processing Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(processing_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "S3 Uploads",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(s3_uploads_total[1d])",
            "legendFormat": "Uploads"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Knowledge Base Sync",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(kb_sync_total[1d])",
            "legendFormat": "Syncs"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "schemaVersion": 27,
    "version": 1,
    "gnetId": null
  }
}
