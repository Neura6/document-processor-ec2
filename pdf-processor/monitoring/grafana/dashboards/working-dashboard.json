{
  "dashboard": {
    "id": null,
    "title": "Document Pipeline - LIVE DATA",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "title": "S3 Uploads",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_s3_uploads_total{bucket=\"rules-repository\"}) or on() vector(0)",
            "legendFormat": "Files Uploaded"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "title": "Format Conversions",
        "type": "table",
        "targets": [
          {
            "expr": "document_conversions_total",
            "legendFormat": "{{from_format}} â†’ {{to_format}}"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "title": "OCR Jobs",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_ocr_processing_total{status=\"success\"}) or on() vector(0)",
            "legendFormat": "OCR Success"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "title": "Chunks Created",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_chunks_created_total) or on() vector(0)",
            "legendFormat": "Total Chunks"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "title": "KB Sync Success",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_kb_sync_operations_total{status=\"success\"}) or on() vector(0)",
            "legendFormat": "KB Sync Success"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 4}
      },
      {
        "title": "Files Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(document_files_processed_total{status=\"success\"}) or on() vector(0)",
            "legendFormat": "Success"
          },
          {
            "expr": "sum(document_files_processed_total{status=\"failed\"}) or on() vector(0)",
            "legendFormat": "Failed"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 4}
      },
      {
        "title": "Processing Timeline",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(document_processing_duration_seconds_sum[5m])",
            "legendFormat": "Processing Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      }
    ]
  }
}
