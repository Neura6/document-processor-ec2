{
  "dashboard": {
    "id": null,
    "title": "Business Intelligence Dashboard",
    "tags": ["business", "analytics", "trends"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Files by Category",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (category) (pdf_files_processed_total)",
            "legendFormat": "{{category}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Daily Processing Volume",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (status) (increase(pdf_files_processed_total[1d]))",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Processing Trends (7 days)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (status) (increase(pdf_files_processed_total[7d]))",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Knowledge Base Sync Status",
        "type": "table",
        "targets": [
          {
            "expr": "kb_sync_total",
            "legendFormat": "Sync Status"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Average File Size Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(pdf_file_size_bytes)",
            "legendFormat": "Avg File Size"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Processing Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "processing_duration_seconds_bucket",
            "legendFormat": "Duration"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 16}
      },
      {
        "id": 7,
        "title": "Top Processing Categories",
        "type": "bar gauge",
        "targets": [
          {
            "expr": "topk(10, sum by (category) (pdf_files_processed_total))",
            "legendFormat": "{{category}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Monthly Processing Volume",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (status) (increase(pdf_files_processed_total[30d]))",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ]
  }
}
