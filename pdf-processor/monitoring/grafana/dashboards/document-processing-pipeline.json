{
  "dashboard": {
    "id": null,
    "title": "Document Processing Pipeline Dashboard",
    "tags": ["document-processing", "prometheus", "pipeline"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "title": "Files Processed",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pdf_files_processed_total[5m])",
            "legendFormat": "Files/min"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "title": "Processing Errors",
        "type": "stat",
        "targets": [
          {
            "expr": "processing_errors_total",
            "legendFormat": "Total Errors"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "title": "Queue Depth",
        "type": "stat",
        "targets": [
          {
            "expr": "queue_depth",
            "legendFormat": "Messages"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8}
      },
      {
        "title": "Processing Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(processing_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 8}
      }
    ]
  }
}