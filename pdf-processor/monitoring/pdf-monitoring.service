[Unit]
Description=PDF Processing Monitoring Stack (Prometheus + Grafana)
After=network.target docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/pdf-processor
ExecStart=/usr/bin/docker-compose -f /opt/pdf-processor/docker-compose.yml up -d
ExecStop=/usr/bin/docker-compose -f /opt/pdf-processor/docker-compose.yml down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
