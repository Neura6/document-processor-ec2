{
  "dashboard": {
    "id": null,
    "title": "PDF Processing Pipeline Overview",
    "tags": ["pdf", "pipeline", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Files Processed Today",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(pdf_files_processed_total[1d]))",
            "legendFormat": "Total Files"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(pdf_files_processed_total{status=\"SUCCESS\"}[1h])) / sum(rate(pdf_files_processed_total[1h])) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Average Processing Time",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(pdf_processing_duration_seconds_bucket[1h])) by (le))",
            "legendFormat": "Median Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 120}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Queue Depth",
        "type": "stat",
        "targets": [
          {
            "expr": "sqs_messages_in_queue",
            "legendFormat": "Messages"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Processing Volume (24h)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(pdf_files_processed_total[5m])) by (folder)",
            "legendFormat": "{{folder}}"
          }
        ],
        "xAxis": {"mode": "time"},
        "yAxis": {"label": "Files/Min"},
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(pdf_processing_errors_total[5m])) by (step)",
            "legendFormat": "{{step}}"
          }
        ],
        "xAxis": {"mode": "time"},
        "yAxis": {"label": "Errors/Min"},
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Processing Time by Step",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(pdf_processing_duration_seconds_bucket[5m])) by (le, step))",
            "legendFormat": "{{step}} 95th percentile"
          }
        ],
        "xAxis": {"mode": "time"},
        "yAxis": {"label": "Seconds"},
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}
